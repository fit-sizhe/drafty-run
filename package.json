{
  "name": "drafty",
  "displayName": "Drafty Runner",
  "description": "Run code blocks in markdown files with state persistence",
  "publisher": "fit-cnice",
  "version": "0.1.0",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Drafty",
      "properties": {
        "drafty.defaultPath": {
          "type": "string",
          "description": "Default path used when saving results JSON with the 'Save' button.",
          "default": ""
        },
        "drafty.savingRule": {
          "type": "string",
          "enum": ["latest-only", "keep-all"],
          "description": "If set to 'latest-only', any old JSON files for a .md are removed before saving new results. Otherwise keep all files.",
          "default": "keep-all"
        }
      }
    },
    "commands": [
      {
        "command": "drafty.startSession",
        "title": "drafty: Start Markdown Code Session"
      },
      {
        "command": "drafty.runBlock'",
        "title": "drafty: Run Code Block"
      },
      {
        "command": "drafty.terminateBlock",
        "title": "drafty: Terminate Block"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^8.2.3",
    "@types/node": "^14.18.63",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "glob": "^7.2.3",
    "mocha": "^8.4.0",
    "typescript": "^4.9.5",
    "vsce": "^2.15.0",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "markdown-it": "^12.3.2",
    "python-shell": "^5.0.0",
    "uuid": "^9.0.1"
  }
}
